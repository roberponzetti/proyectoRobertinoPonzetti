{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
<body>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        <h2 style="text-align:center; margin-top:100px;"><b>Registro</b></h3>
    </div>
    <div class="container" style="margin-top: 50px;">
        {{ form_start(formulario, {'enctype':'multipart/form-data'})}}
            <div class="row" style="text-align: center;">
                <div class="offset-md-4 col-md-4">
                    {{ form_widget(formulario.username, {attr: {class: 'form-control', placeholder: 'Username'} })}}
                    <br>
                </div>
                <div class="offset-md-4 col-md-4">
                    {{ form_widget(formulario.password, {attr: {class: 'form-control', placeholder: 'Password'} })}}
                    <br>
                </div>
                <div class="offset-md-5 col-md-2">
                    {{ form_widget(formulario.Aceptar, {attr: {class: 'btn btn-primary'} })}}
                </div>
            </div>
            {{ form_end(formulario) }}
    </div>
</body>
{% endblock %}